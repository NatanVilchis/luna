<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

            <ImageView
                android:id="@+id/imageviewONG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

                <Button
                    android:id="@+id/btnOpenURLONG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"


                    android:background="?android:attr/selectableItemBackground"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/btnImageURL"
                    android:layout_height="80dp"
                    android:layout_width="60dp"

                    android:background="@drawable/mapsgoogle"
                    app:layout_constraintStart_toStartOf="parent" />



                <Button
                    android:id="@+id/btnDirectionURL"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"


                    android:background="?android:attr/selectableItemBackground"

                    />







            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/textViewONGName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONG Name"
            android:layout_weight="3"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_weight="3"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/textViewDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:text="Direction"
            android:editable="false"
            android:layout_weight="3"
            android:textSize="20sp"
            tools:ignore="Deprecated" />




        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:text="Phone"
            android:layout_weight="3"
            android:textSize="20sp" />




    </LinearLayout>

</androidx.cardview.widget.CardView>